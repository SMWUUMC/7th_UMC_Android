<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:paddingVertical="25dp"
        android:paddingLeft="20sp"
        android:src="@drawable/vector" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘 하루는 어땠나요?"
            android:fontFamily="@font/gangwoneduhyeonokt"
            android:textSize="35sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="감정우표를 선택해주세요"
            android:fontFamily="@font/gangwoneduhyeonokt"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="선택한 감정우표를 기반으로 맞춤형 질문이 배달됩니다"
            android:fontFamily="@font/scdream4"
            android:paddingTop="20sp"
            android:paddingBottom="5sp"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/happy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20sp"
            android:src="@drawable/yellow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="더없이 행복한 하루였어요"
            android:paddingTop="5sp"
            android:fontFamily="@font/gangwoneduhyeonokt"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/excited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/blue"
            android:paddingTop="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="들뜨고 흥분돼요"
            android:paddingTop="5sp"
            android:fontFamily="@font/gangwoneduhyeonokt"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/ordinary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/violet"
            android:paddingTop="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="평범한 하루였어요"
            android:paddingTop="5sp"
            android:fontFamily="@font/gangwoneduhyeonokt"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/anxiety"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/green"
            android:paddingTop="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="생각이 많아지고 불안해요"
            android:paddingTop="5sp"
            android:fontFamily="@font/gangwoneduhyeonokt"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/angry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/red"
            android:paddingTop="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="부글부글 화가나요"
            android:paddingTop="5sp"
            android:fontFamily="@font/gangwoneduhyeonokt"
            android:textSize="20sp" />

    </LinearLayout>
</LinearLayout>