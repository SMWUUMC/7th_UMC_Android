<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/splash_logo"
        android:layout_width="220dp"
        android:layout_height="400dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="0dp"
        android:src="@drawable/icon_splash" />

    <ImageView
        android:id="@+id/rotatable_image"
        android:layout_width="86dp"
        android:layout_height="66dp"
        android:layout_alignTop="@id/splash_text"
        android:layout_marginStart="-46dp"
        android:layout_marginTop="-21dp"
        android:layout_toEndOf="@id/splash_text"
        android:rotation="35"
        android:src="@drawable/letter" />

    <TextView
        android:id="@+id/splash_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/splash_logo"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/scdream3"
        android:text="t  o  y  o  u"
        android:textColor="#000000"
        android:textSize="40sp" />

</RelativeLayout>
